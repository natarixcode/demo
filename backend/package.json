{
  "name": "natarix-backend-international",
  "version": "2.0.0",
  "description": "Production-grade backend for NATARIX international platform",
  "main": "server-production.js",
  "scripts": {
    "start": "node server-production.js",
    "dev": "nodemon server-production.js",
    "test": "jest --verbose --coverage",
    "test:watch": "jest --watch",
    "test:integration": "jest --testPathPattern=integration",
    "test:unit": "jest --testPathPattern=unit",
    "test:load": "artillery run load-tests/load-test.yml",
    "test:security": "npm audit && snyk test",
    "lint": "eslint . --ext .js,.json",
    "lint:fix": "eslint . --ext .js,.json --fix",
    "format": "prettier --write .",
    "build": "echo 'Building production assets...' && npm run lint && npm run test",
    "docker:build": "docker build -t natarix-backend .",
    "docker:run": "docker run -p 3001:3001 natarix-backend",
    "migrate": "node migrations/migrate.js",
    "seed": "node seeds/seed.js",
    "backup": "node scripts/backup-db.js",
    "monitor": "pm2 start ecosystem.config.js",
    "logs": "pm2 logs"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "bull": "^4.16.5",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^7.5.1",
    "express-validator": "^7.0.1",
    "helmet": "^7.2.0",
    "i18n": "^0.15.1",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "moment": "^2.30.1",
    "morgan": "^1.10.1",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.10.1",
    "pg": "^8.16.3",
    "redis": "^4.7.1",
    "sharp": "^0.32.6",
    "socket.io": "^4.8.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^9.0.1",
    "winston": "^3.17.0",
    "xss-clean": "^0.1.4"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "artillery": "^2.0.3",
    "cross-env": "^7.0.3",
    "eslint": "^8.54.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.0",
    "nodemon": "^3.0.1",
    "pm2": "^5.3.0",
    "prettier": "^3.1.0",
    "snyk": "^1.1246.0",
    "supertest": "^6.3.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "**/*.js",
      "!node_modules/**",
      "!coverage/**",
      "!logs/**"
    ],
    "testMatch": [
      "**/tests/**/*.test.js",
      "**/tests/**/*.spec.js"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ]
  },
  "keywords": [
    "natarix",
    "social-platform",
    "international",
    "production-grade",
    "nodejs",
    "express",
    "postgresql",
    "notifications",
    "real-time"
  ],
  "author": "Natarix International Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/natarix/backend.git"
  }
}
